<% layout("layouts/boilerplate") %>
    <div id="cluster-map" class="mb-3"></div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% for(let campground of campgrounds) {%>
            <div class="col">
                <div class="card h-100">
                    <% if(campground.images.length){%>
                        <img src="<%= campground.images[0].url %>" class="card-img-top" alt="">
                        <% }else{ %>
                            <img src="https://res.cloudinary.com/dk179aa93/image/upload/v1612548188/YelpCamp/lz8jjv2gyynjil7lswf4_hcr92b.png"
                                class="card-img-top" alt="">
                            <% } %>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= campground.title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= campground.description %>
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <%= campground.location %>
                                        </small>
                                    </p>
                                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%=
                                            campground.title %> </a>
                                </div>
                </div>
            </div>
            <% } %>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgroundsStr = { features: JSON.parse('<%-JSON.stringify(campgrounds)%>') };
    </script>
    <script src="/javascripts/clusterMap.js"></script>